meta {
  name: 02 - Get All Weights
  type: http
  seq: 3
}

get {
  url: {{baseUrl}}/weights/paginated?page=1&limit=5
  body: none
  auth: bearer
}

params:query {
  page: 1
  limit: 5
}

auth:bearer {
  token: {{accessToken}}
}

tests {
  test("Get weights successful", function() {
    expect(res.status).to.equal(200);
    expect(res.body.data).to.be.an('array');
    expect(res.body.pagination).to.be.an('object');
    expect(res.body.pagination.page).to.equal(1);
    expect(res.body.pagination.limit).to.equal(5);
  });
  
  test("Photo URLs are signed", function() {
    if (res.body.data.length > 0 && res.body.data[0].photo) {
      expect(res.body.data[0].photo.thumbnailUrl).to.include('/photos/secure/');
    }
  });
}
