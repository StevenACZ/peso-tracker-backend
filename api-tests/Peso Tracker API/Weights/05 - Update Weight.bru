meta {
  name: 05 - Update Weight
  type: http
  seq: 5
}

patch {
  url: {{baseUrl}}/weights/{{lastWeightId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "weight": 71.8,
    "notes": "Updated weight from Bruno"
  }
}

tests {
  test("Weight updated successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body.id).to.equal(parseInt(bru.getEnvVar("lastWeightId")));
    expect(res.body.weight).to.equal("71.8");
    expect(res.body.notes).to.equal("Updated weight from Bruno");
  });
}