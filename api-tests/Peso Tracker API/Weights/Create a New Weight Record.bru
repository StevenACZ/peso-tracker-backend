meta {
  name: Create a New Weight Record
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/weights
  body: json
  auth: bearer
}

auth:bearer {
  token: {{token}}
}

body:json {
  {
    "weight": 75.5,
    "date": "2024-08-24",
    "notes": "After breakfast"
  }
}

script:post-response {
  if (res.status === 201) {
    const responseData = res.getBody();
    
    bru.setEnvVar("id_weight", responseData.id);
    
    console.log("Id Weight saved:", responseData.id);
  }
}
