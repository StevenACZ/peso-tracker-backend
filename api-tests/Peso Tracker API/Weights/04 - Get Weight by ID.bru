meta {
  name: 04 - Get Weight by ID
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/weights/{{lastWeightId}}
  body: none
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

tests {
  test("Get weight by ID successful", function() {
    expect(res.status).to.equal(200);
    expect(res.body.id).to.equal(parseInt(bru.getEnvVar("lastWeightId")));
    expect(res.body.weight).to.be.a('string');
    expect(res.body.userId).to.be.a('number');
  });
}