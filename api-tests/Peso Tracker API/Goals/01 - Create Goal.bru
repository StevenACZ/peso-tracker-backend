meta {
  name: 01 - Create Goal
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/goals
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "targetWeight": 70.0,
    "targetDate": "2025-12-31"
  }
}

script:post-response {
  if (res.status === 201 && res.body.id) {
    bru.setEnvVar("lastGoalId", res.body.id.toString());
    console.log("âœ… Goal created, ID saved:", res.body.id);
  }
}

tests {
  test("Goal created successfully", function() {
    expect(res.status).to.equal(201);
    expect(res.body.id).to.be.a('number');
    expect(res.body.targetWeight).to.equal("70.00");
    expect(res.body.targetDate).to.include("2025-12-31");
    expect(res.body.userId).to.be.a('number');
  });
}