meta {
  name: 03 - Update Goal
  type: http
  seq: 3
}

patch {
  url: {{baseUrl}}/goals/{{lastGoalId}}
  body: json
  auth: bearer
}

auth:bearer {
  token: {{accessToken}}
}

body:json {
  {
    "targetWeight": 68.5,
    "targetDate": "2025-11-30"
  }
}

tests {
  test("Goal updated successfully", function() {
    expect(res.status).to.equal(200);
    expect(res.body.id).to.be.a('number');
    expect(res.body.targetWeight).to.equal("68.50");
    expect(res.body.targetDate).to.include("2025-11-30");
    expect(res.body.updatedAt).to.exist;
  });
}