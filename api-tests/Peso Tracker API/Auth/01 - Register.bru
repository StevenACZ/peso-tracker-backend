meta {
  name: 01 - Register
  type: http
  seq: 1
}

post {
  url: {{baseUrl}}/auth/register
  body: json
  auth: none
}

body:json {
  {
    "username": "Test User",
    "email": "test@example.com",
    "password": "Test123!"
  }
}

script:post-response {
  if (res.status === 201 && res.body.accessToken) {
    bru.setEnvVar("accessToken", res.body.accessToken);
    bru.setEnvVar("refreshToken", res.body.refreshToken);
    console.log("âœ… Tokens saved after registration");
  }
}

tests {
  test("Registration successful", function() {
    expect(res.status).to.equal(201);
    expect(res.body.user).to.be.an('object');
    expect(res.body.accessToken).to.be.a('string');
    expect(res.body.refreshToken).to.be.a('string');
  });
}
