meta {
  name: Reset Password
  type: http
  seq: 5
}

post {
  url: {{host}}/auth/reset-password
  body: json
  auth: none
}

body:json {
  {
    "token": "your-reset-token-here",
    "newPassword": "newSecurePassword123"
  }
}

tests {
  test("should handle reset password request", function() {
    // This will fail with invalid token, but tests the endpoint
    if (res.status === 400) {
      expect(res.body.message).to.include('Token de restablecimiento inválido');
    } else if (res.status === 200) {
      expect(res.body.message).to.equal('Contraseña restablecida exitosamente.');
    }
  });
}