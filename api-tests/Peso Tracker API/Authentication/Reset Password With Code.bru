meta {
  name: Reset Password With Code
  type: http
  seq: 7
}

post {
  url: {{host}}/auth/reset-password-with-code
  body: json
  auth: none
}

body:json {
  {
    "email": "test@example.com",
    "code": "123456",
    "newPassword": "newPassword123"
  }
}

tests {
  test("should handle password reset with code", function() {
    if (res.status === 400) {
      expect(res.body.message).to.include('Código inválido');
    } else if (res.status === 200) {
      expect(res.body.message).to.equal('Contraseña restablecida exitosamente.');
    }
  });
}