{
  "name": "peso-tracker-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:dev:env": "cp .env.local-dev .env && npm run start:dev",
    "start:prod:env": "cp .env.vps .env && npm run start:prod",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio",
    "db:seed": "ts-node prisma/seed.ts",
    "deploy:build": "npm run build && npm run db:generate",
    "deploy:migrate": "npx prisma db push",
    "deploy:reset": "npx prisma db push --force-reset",
    "deploy:start": "npm run deploy:migrate && npm run start:prod",
    "deploy:start:reset": "npm run deploy:reset && npm run start:prod",
    "dev": "npm run start:dev:env",
    "prod": "npm run build && npm run start:prod:env",
    "db:push:local": "cp .env.local-dev .env && npx prisma db push",
    "db:studio:local": "cp .env.local-dev .env && npm run db:studio",
    "db:migrate:local": "cp .env.local-dev .env && npx prisma migrate dev",
    "dev:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d --build",
    "go": "npm run db:push:local && npm run start:dev:env",
    "go:reset": "npm run dev:reset && npm run start:dev:env",
    "dev:start": "docker-compose -f docker-compose.dev.yml up -d",
    "dev:logs": "docker-compose -f docker-compose.dev.yml logs -f",
    "dev:stop": "docker-compose -f docker-compose.dev.yml down",
    "prod:start": "docker-compose up -d",
    "prod:reset": "docker-compose down -v && docker-compose up -d --build"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.12.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.1",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.12.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.0.1",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.3",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.0",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.10.7",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.8.1",
    "@types/express": "^5.0.0",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
